{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["es2018"],
    "outDir": "build/node",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules", "sample", "**/*.spec.ts", "test/**", "import-meta"]
}
