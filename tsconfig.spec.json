  
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "transform": "./import-meta" }]
  },
  "exclude": ["node_modules"]
}
